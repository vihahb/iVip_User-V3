<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_shop"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_220"
    android:layout_marginLeft="@dimen/size_8"
    android:layout_marginRight="@dimen/size_8"
    android:layout_marginTop="@dimen/size_8"
    android:orientation="vertical"
    android:transitionName="@string/transition_name_shop"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/size_3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_favorite_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:transitionName="@string/transition_shop_img" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/color_canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/size_30"
            android:layout_marginTop="@dimen/size_50"
            android:background="@drawable/item_drawable_background_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/size_8"
                        android:layout_marginLeft="@dimen/size_16"
                        android:layout_marginStart="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_6"
                        android:gravity="center_vertical|left">


                        <com.xtel.ivipu.view.widget.RoundImage
                            android:layout_width="@dimen/size_75"
                            android:layout_height="@dimen/size_75"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/bg_white"
                            android:transitionName="@string/transition_shop_ava"
                            tools:targetApi="lollipop" />

                        <com.xtel.ivipu.view.widget.RoundImage
                            android:id="@+id/img_favorite_brand"
                            android:layout_width="@dimen/size_70"
                            android:layout_height="@dimen/size_70"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:transitionName="@string/transition_shop_ava"
                            tools:targetApi="lollipop" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/size_14"
                        android:paddingStart="@dimen/size_14">

                        <TextView
                            android:id="@+id/tv_favorite_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Shop Name 1 "
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:transitionName="@string/transition_shop_name" />

                        <TextView
                            android:id="@+id/tv_favorite_shop_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Cầu Giấy - Hà Nội "
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:transitionName="@string/transition_shop_name" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:background="#999D29B0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_36"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/size_16"
                                android:paddingRight="@dimen/size_8">

                                <TextView
                                    android:id="@+id/tv_favorite_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/size_16"
                                    android:text="10:00"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingRight="@dimen/size_16"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/size_8">

                                    <ImageView
                                        android:layout_width="@dimen/size_22"
                                        android:layout_height="@dimen/size_22"
                                        android:src="@drawable/ic_view" />

                                    <TextView
                                        android:id="@+id/tv_favorite_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/size_6"
                                        android:text="100"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/size_8">

                                    <ImageView
                                        android:layout_width="@dimen/size_22"
                                        android:layout_height="@dimen/size_22"
                                        android:src="@drawable/ic_like" />

                                    <TextView
                                        android:id="@+id/tv_favorite_like"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/size_6"
                                        android:text="100"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/size_8">

                                    <ImageView
                                        android:layout_width="@dimen/size_22"
                                        android:layout_height="@dimen/size_22"
                                        android:src="@drawable/ic_comment" />

                                    <TextView
                                        android:id="@+id/tv_favorite_comment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/size_6"
                                        android:text="100"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>