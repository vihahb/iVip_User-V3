<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_8"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_news_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_160"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_32"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_news_store_name"
                    style="@style/tv_item_news"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/size_16" />

                <TextView
                    android:id="@+id/tv_news_time"
                    style="@style/tv_item_news"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/size_16" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_news_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_news_view"
                android:gravity="center_vertical"
                android:padding="@dimen/size_6"
                android:text="100"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_news_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_news_like"
                android:gravity="center_vertical"
                android:padding="@dimen/size_8"
                android:text="100"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_news_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_news_comment"
                android:gravity="center_vertical"
                android:padding="@dimen/size_8"
                android:text="100"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_news_rates"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_news_rate"
                android:gravity="center_vertical"
                android:padding="@dimen/size_8"
                android:text="100"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>