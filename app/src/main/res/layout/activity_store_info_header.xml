<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/size_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.xtel.ivipu.view.widget.RectangleLayout
                android:id="@+id/store_info.header.layout_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/store_info.header.img_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/store_info.header.layout_rec"
                android:layout_alignEnd="@+id/store_info.header.layout_rec"
                android:layout_alignLeft="@+id/store_info.header.layout_rec"
                android:layout_alignRight="@+id/store_info.header.layout_rec"
                android:layout_alignStart="@+id/store_info.header.layout_rec"
                android:layout_alignTop="@+id/store_info.header.layout_rec"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <TextView
            android:id="@+id/store_info.header.txt_store_name"
            style="@style/TextView.Black_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@mipmap/ic_menu_info"
            android:drawableStart="@mipmap/ic_menu_info"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingBottom="@dimen/size_8"
            android:paddingLeft="@dimen/size_20"
            android:paddingStart="@dimen/size_20"
            android:paddingRight="@dimen/size_16"
            android:paddingEnd="@dimen/size_16"
            android:paddingTop="@dimen/size_8"
            android:text="@string/app_name" />
    </LinearLayout>
</android.support.v7.widget.CardView>