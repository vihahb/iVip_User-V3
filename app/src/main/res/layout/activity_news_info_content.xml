<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/size_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_info.content.txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/black_55" />

        <LinearLayout
            android:id="@+id/news_info.content.layout_current_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_8"
            android:paddingLeft="@dimen/size_24"
            android:paddingRight="@dimen/size_24"
            android:paddingTop="@dimen/size_8">

            <RatingBar
                android:id="@+id/news_info.content.rating_bar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_36"
                android:isIndicator="false"
                android:max="5"
                android:rating="0" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/size_0"
                android:layout_weight="1" />

            <Button
                android:id="@+id/news_info.content.btn_rate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_36"
                android:background="@drawable/button_news_info"
                android:text="@string/layout_rate"
                android:textAllCaps="false"
                android:textColor="@color/news_info_title" />
        </LinearLayout>

        <TextView
            android:id="@+id/news_info.content.txt_current_rate"
            style="@style/TextView.Black_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_24"
            android:layout_marginRight="@dimen/size_24"
            android:layout_marginTop="@dimen/size_8"
            android:clickable="true"
            android:drawableEnd="@mipmap/ic_arrow_right_black_24"
            android:drawableLeft="@mipmap/ic_star_black_36"
            android:drawableRight="@mipmap/ic_arrow_right_black_24"
            android:drawableStart="@mipmap/ic_star_black_36"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/black_55" />

        <TextView
            android:id="@+id/news_info.content.txt_comment"
            style="@style/TextView.Black_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_24"
            android:layout_marginRight="@dimen/size_24"
            android:layout_marginTop="@dimen/size_8"
            android:clickable="true"
            android:drawableEnd="@mipmap/ic_arrow_right_black_24"
            android:drawableLeft="@mipmap/ic_message_black_36"
            android:drawableRight="@mipmap/ic_arrow_right_black_24"
            android:drawableStart="@mipmap/ic_message_black_36"
            android:foreground="?android:attr/selectableItemBackground" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/black_55" />

        <TextView
            android:id="@+id/news_info.content.txt_more_news"
            style="@style/TextView.Black_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_24"
            android:layout_marginRight="@dimen/size_24"
            android:layout_marginTop="@dimen/size_8"
            android:clickable="true"
            android:drawableEnd="@mipmap/ic_arrow_right_black_24"
            android:drawableLeft="@mipmap/ic_s_black_36"
            android:drawableRight="@mipmap/ic_arrow_right_black_24"
            android:drawableStart="@mipmap/ic_s_black_36"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/layout_view_more_news_in_the_same_store" />
    </LinearLayout>
</android.support.v7.widget.CardView>