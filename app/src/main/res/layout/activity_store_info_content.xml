<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="@dimen/size_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_info.header.txt_store_name"
                style="@style/TextView.Black_Title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:clickable="true"
                android:paddingBottom="@dimen/size_8"
                android:paddingEnd="@dimen/size_16"
                android:paddingLeft="@dimen/size_20"
                android:paddingRight="@dimen/size_16"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_8"
                android:text="@string/layout_address" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/store_info.content.list_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8"
        android:layout_marginTop="@dimen/size_8"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="@dimen/size_4">

        <TextView
            android:id="@+id/store_info.content.txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8" />
    </android.support.v7.widget.CardView>
</LinearLayout>