<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_18"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_16"
        android:paddingLeft="@dimen/size_8"
        android:paddingRight="@dimen/size_8"
        android:paddingTop="@dimen/size_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.xtel.ivipu.view.widget.RoundImage
                android:id="@+id/fragment_info_address_img_logo"
                android:layout_width="@dimen/size_48"
                android:layout_height="@dimen/size_48"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/fragment_info_address_txt_title"
                style="@style/TextView_Elipend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginStart="@dimen/size_16"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_info_address_txt_address"
            style="@style/TextView_Elipend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:drawableLeft="@drawable/ic_action_address"
            android:drawablePadding="@dimen/size_8"
            android:drawableStart="@drawable/ic_action_address"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_8"
            android:paddingStart="@dimen/size_8"
            android:text="@string/app_name"
            android:textSize="@dimen/font_13" />

        <TextView
            android:id="@+id/fragment_info_address_txt_phone"
            style="@style/TextView_Elipend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:drawableLeft="@drawable/ic_action_address"
            android:drawablePadding="@dimen/size_8"
            android:drawableStart="@drawable/ic_action_address"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_8"
            android:paddingStart="@dimen/size_8"
            android:text="@string/app_name"
            android:textSize="@dimen/font_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginRight="@dimen/size_8"
            android:layout_marginTop="@dimen/size_8"
            android:background="@android:color/darker_gray" />

        <TextView
            style="@style/TextView_Elipend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginRight="@dimen/size_8"
            android:layout_marginTop="@dimen/size_8"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/introduce"
            android:textSize="@dimen/font_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_info_address_txt_content"
            style="@style/TextView_Elipend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textSize="@dimen/font_13" />
    </LinearLayout>

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="@dimen/size_36"-->
    <!--android:layout_height="@dimen/size_36"-->
    <!--android:layout_gravity="right|end"-->
    <!--android:layout_marginEnd="@dimen/size_16"-->
    <!--android:layout_marginRight="@dimen/size_16"-->
    <!--android:clickable="true"-->
    <!--android:foreground="?android:attr/selectableItemBackground"-->
    <!--card_view:cardBackgroundColor="@android:color/white"-->
    <!--card_view:cardCornerRadius="@dimen/size_36"-->
    <!--card_view:cardElevation="@dimen/size_4">-->

    <ImageButton
        android:id="@+id/fragment_info_address_img_direction"
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:layout_gravity="right|end"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:background="@drawable/round_white"
        android:contentDescription="@null"
        android:elevation="@dimen/size_4"
        android:padding="@dimen/size_4"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_send"
        app:elevation="@dimen/size_4" />
    <!--</android.support.v7.widget.CardView>-->
</FrameLayout>