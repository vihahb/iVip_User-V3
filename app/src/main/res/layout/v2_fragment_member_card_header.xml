<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/size_50"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_card_store_name"
        style="@style/TextView.White_Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_4"
        android:drawableLeft="@mipmap/ic_store_name"
        android:drawableStart="@mipmap/ic_store_name"
        android:paddingLeft="@dimen/size_16"
        android:paddingStart="@dimen/size_16"
        android:text="fdsfsd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_4"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_card_level"
            style="@style/TextView.White_Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/ic_card_level"
            android:drawableStart="@mipmap/ic_card_level"
            android:paddingLeft="@dimen/size_16"
            android:paddingStart="@dimen/size_16"
            android:text="fdsfsd" />

        <TextView
            android:id="@+id/tv_card_total_point"
            style="@style/TextView.White_Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_point"
            android:drawableStart="@mipmap/ic_point"
            android:paddingEnd="@dimen/size_16"
            android:paddingLeft="@dimen/size_4"
            android:paddingRight="@dimen/size_16"
            android:paddingStart="@dimen/size_4"
            android:text="fdsfsd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_card_current_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <TextView
            style="@style/TextView.White_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_24"
        android:paddingRight="@dimen/size_24">

        <TextView
            android:id="@+id/tv_date"
            style="@style/TextView.White_Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_cursor_card" />

        <TextView
            android:id="@+id/tv_action_view_his"
            style="@style/TextView.White_Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|end"
            android:text="Lịch sử giao dịch" />
    </LinearLayout>
</LinearLayout>