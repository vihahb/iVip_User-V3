<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgr_app"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_16">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_200">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/profile_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/bgr_app" />

                    <LinearLayout
                        android:id="@+id/cover_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.6"
                        android:background="@android:color/black"
                        android:orientation="horizontal" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/size_10"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_90"
                        android:layout_marginBottom="@dimen/size_10"
                        android:gravity="center_horizontal">

                        <com.xtel.ivipu.view.widget.RoundImage
                            android:id="@+id/img_avatar_profile"
                            android:layout_width="@dimen/size_80"
                            android:layout_height="@dimen/size_80"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher" />

                        <FrameLayout
                            android:id="@+id/fr_change_avatar"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="-30dp"
                            android:layout_marginTop="@dimen/size_30"
                            android:background="@drawable/bg_red_selecter"
                            app:elevation="@dimen/size_8"
                            tool:ignore="UnusedAttribute">

                            <ImageView
                                android:id="@+id/img_profile_change_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/size_8"
                                android:elevation="@dimen/size_8"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_photo_camera_white" />
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/name_null"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_20" />

                    <TextView
                        android:id="@+id/tv_date_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/date_reg_null"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_6"
                        android:weightSum="3">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_1"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_1"
                            android:layout_weight="1"
                            android:background="@android:color/white" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_1"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="@dimen/size_4"
                            android:text="@string/point_null"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_ranking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="@dimen/size_4"
                            android:text="@string/rank_null"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="@dimen/size_48"
                            android:layout_height="@dimen/size_48">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:padding="@dimen/size_16"
                                android:src="@mipmap/full_name" />

                            <View
                                android:layout_width="@dimen/size_1"
                                android:layout_height="@dimen/size_48"
                                android:layout_gravity="right"
                                android:background="@android:color/white" />
                        </FrameLayout>

                        <EditText
                            android:id="@+id/edt_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_48"
                            android:hint="@string/name_null"
                            android:paddingLeft="@dimen/size_60"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="@dimen/size_48"
                            android:layout_height="@dimen/size_48">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:padding="@dimen/size_16"
                                android:src="@mipmap/phone_number" />

                            <View
                                android:layout_width="@dimen/size_1"
                                android:layout_height="@dimen/size_48"
                                android:layout_gravity="right"
                                android:background="@android:color/white" />
                        </FrameLayout>

                        <EditText
                            android:id="@+id/edt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_48"
                            android:hint="@string/phone_null"
                            android:paddingLeft="@dimen/size_60"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="@dimen/size_48"
                            android:layout_height="@dimen/size_48">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:padding="@dimen/size_16"
                                android:src="@mipmap/address" />

                            <View
                                android:layout_width="@dimen/size_1"
                                android:layout_height="@dimen/size_48"
                                android:layout_gravity="right"
                                android:background="@android:color/white" />
                        </FrameLayout>

                        <EditText
                            android:id="@+id/edt_address_profile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_48"
                            android:hint="@string/address_null"
                            android:paddingLeft="@dimen/size_60"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="@dimen/size_48"
                            android:layout_height="@dimen/size_48">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:padding="@dimen/size_16"
                                android:src="@mipmap/birth_day" />

                            <View
                                android:layout_width="@dimen/size_1"
                                android:layout_height="@dimen/size_48"
                                android:layout_gravity="right"
                                android:background="@android:color/white" />
                        </FrameLayout>

                        <EditText
                            android:id="@+id/edt_birthday_profile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_48"
                            android:focusable="false"
                            android:hint="@string/birth_day_null"
                            android:paddingLeft="@dimen/size_60"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="@dimen/size_48"
                            android:layout_height="@dimen/size_48">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:padding="@dimen/size_16"
                                android:src="@mipmap/gender" />

                            <View
                                android:layout_width="@dimen/size_1"
                                android:layout_height="@dimen/size_40"
                                android:layout_gravity="right"
                                android:background="@android:color/white" />
                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/size_4"
                            android:layout_marginRight="@dimen/size_4"
                            android:background="@android:color/white" />
                        <Spinner
                            android:id="@+id/sp_gender"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40"
                            android:paddingLeft="@dimen/size_60"
                            android:textColorHint="@android:color/white" />
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="@dimen/size_48"
                            android:layout_height="@dimen/size_48">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:padding="@dimen/size_16"
                                android:src="@mipmap/logout" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="@dimen/size_48"
                                android:layout_gravity="right"
                                android:background="@android:color/white" />
                        </FrameLayout>
                        <Button
                            android:id="@+id/btn_Logout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_48"
                            android:background="@drawable/button_transparent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/size_60"
                            android:text="@string/btn_logout"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/btn_Login"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_48"
                            android:background="@drawable/button_transparent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/size_60"
                            android:text="@string/btn_login"
                            android:textColor="@android:color/white" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/size_4"
                            android:layout_marginRight="@dimen/size_4"
                            android:background="@android:color/white" />
                    </FrameLayout>
                </LinearLayout>

