<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/black_55" />

    <TextView
        android:id="@+id/item.store_info.txt_address"
        style="@style/TextView.Black_Title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:background="@drawable/button_transparent"
        android:clickable="true"
        android:drawableEnd="@mipmap/ic_arrow_right_black_18"
        android:drawableRight="@mipmap/ic_arrow_right_black_18"
        android:paddingBottom="@dimen/size_8"
        android:paddingEnd="@dimen/size_16"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_16"
        android:paddingStart="@dimen/size_20"
        android:paddingTop="@dimen/size_8"
        android:text="@string/app_name" />
</LinearLayout>