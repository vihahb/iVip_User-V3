<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_36"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/size_4">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_8"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/size_16">

        <com.xtel.ivipu.view.widget.RoundImage
            android:id="@+id/img_brand_store"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:layout_marginBottom="@dimen/size_8"
            android:src="@mipmap/ic_dialog_success" />

        <TextView
            android:id="@+id/txt_dialog_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chúc mừng"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_dialog_notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bạn đã checkin thành công, bạn được tích lũy"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_2"
            android:layout_marginBottom="@dimen/size_14"
            android:layout_marginTop="@dimen/size_14"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/size_1"
                android:layout_weight="0.5" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/size_1"
                android:layout_weight="1"
                android:background="@android:color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/size_1"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_score_checkin"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_dialog_notification_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/size_6"
                    android:text="1000"
                    android:textAllCaps="false"
                    android:textColor="#57c5b5"
                    android:textSize="@dimen/font_20"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="center"
            android:text="Điểm"
            android:textColor="@android:color/black" />


        <Button
            android:id="@+id/btn_dialog_notification_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/size_20"
            android:background="@drawable/btn_background_dialog"
            android:text="OK"
            android:textColor="@android:color/white" />
    </LinearLayout>
</android.support.v7.widget.CardView>