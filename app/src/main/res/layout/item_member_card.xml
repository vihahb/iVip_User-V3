<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_6"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/size_3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_220">
        <ImageView
            android:id="@+id/img_card_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8">
                <FrameLayout
                    android:layout_width="@dimen/size_56"
                    android:layout_height="@dimen/size_56"
                    android:layout_marginEnd="@dimen/size_16"
                    android:layout_marginLeft="@dimen/size_8"
                    android:layout_marginRight="@dimen/size_16"
                    android:layout_marginStart="@dimen/size_8">
                    <com.xtel.ivipu.view.widget.RoundImage
                        android:layout_width="@dimen/size_56"
                        android:layout_height="@dimen/size_56"
                        android:layout_gravity="center"
                        android:src="@mipmap/bg_white" />

                    <com.xtel.ivipu.view.widget.RoundImage
                        android:id="@+id/img_card_ava"
                        android:layout_width="@dimen/size_50"
                        android:layout_height="@dimen/size_50"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_card_user_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/size_16"
                        android:layout_marginStart="@dimen/size_16"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/txt_store_name"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_20" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingStart="@dimen/size_16"
                    tools:ignore="RtlSymmetry">
                    <TextView
                        android:id="@+id/tv_date_created"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Thời gian tạo:"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_15" />
                </LinearLayout><LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_32"
                    android:orientation="horizontal"
                android:paddingLeft="@dimen/size_16"
                android:paddingStart="@dimen/size_16"
                    tools:ignore="RtlSymmetry">
                    <TextView
                        android:id="@+id/tv_card_store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Tên cửa hàng:"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_15" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>