<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_info.voucher.itemView"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/size_16"
    android:paddingLeft="@dimen/size_16"
    android:paddingRight="@dimen/size_16"
    android:paddingTop="@dimen/size_16">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="@dimen/size_24"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_24"
        android:paddingStart="@dimen/size_16">

        <TextView
            android:id="@+id/news_info.voucher.txt_code"
            style="@style/TextView.Black_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_info.voucher.txt_expired"
            style="@style/TextView.Black_Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:text="@string/app_name" />
    </LinearLayout>

    <ImageView
        android:id="@+id/news_info.voucher.img_qr_code"
        android:layout_width="@dimen/size_96"
        android:layout_height="@dimen/size_96"
        android:contentDescription="@null"
        android:src="@mipmap/ic_qr_code" />
</LinearLayout>