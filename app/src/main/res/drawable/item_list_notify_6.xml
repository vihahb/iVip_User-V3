<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@android:color/transparent" />

    <item
        android:bottom="-200dp"
        android:left="0dp"
        android:right="50dp"
        android:top="0dp">
